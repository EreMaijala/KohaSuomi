/home/koha/koha-dev/var/log/plack*.log 
/home/koha/koha-dev/var/log/rest.log 
/home/koha/koha-dev/var/log/cpu_pos.log 
{
	daily
	missingok
	rotate 14
	compress
	delaycompress
	notifempty
	create 660 www-data koha
	su
	sharedscripts
	postrotate
		/etc/init.d/koha-plack-daemon stop
		sleep 5
		/etc/init.d/koha-plack-daemon start
	endscript
}

